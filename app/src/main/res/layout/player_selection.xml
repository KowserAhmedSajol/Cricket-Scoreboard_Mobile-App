<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerSelection"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f2f2f2"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Striker"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/openingStriker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Player name"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-striker"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/openingNonStriker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Player name"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening bowler"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/opwningBowler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Player name"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Match"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="187dp"
        android:backgroundTint="@color/deep_green"
        />
<TextView
    android:id="@+id/txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

</LinearLayout>