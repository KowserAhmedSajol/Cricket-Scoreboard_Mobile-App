<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f2f2f2"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/hostteamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Host Team"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/visitorteamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Visitor team"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:inputType="text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toss won by?"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGrp1">
        <RadioButton
            android:id="@+id/htoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Host Team"
            android:textColorHint="@color/black"
            android:buttonTint="@color/green"/>
        <RadioButton
            android:id="@+id/vtoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Visitor Team"
            android:textColorHint="@color/black"
            android:buttonTint="@color/green"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opted to?"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGrp2">
        <RadioButton android:id="@+id/bat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bat"
            android:textColor="@color/black"
            android:buttonTint="@color/green"/>
        <RadioButton android:id="@+id/bowl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowl"
            android:textColor="@color/black"
            android:buttonTint="@color/green"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overs?"
        android:textColor="@color/green"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="15"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:inputType="number"
        />
    <Button
        android:id="@+id/startbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start match"
        android:backgroundTint="@color/deep_green"
        />

</LinearLayout>